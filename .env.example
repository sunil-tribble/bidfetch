# Database Configuration
DATABASE_URL=postgresql://bidfetch:password@localhost:5432/bidfetch
MONGODB_URI=mongodb://localhost:27017/bidfetch
REDIS_URL=redis://localhost:6379

# API Keys
SAM_GOV_API_KEY=your_sam_gov_api_key_here
TED_EU_API_KEY=your_ted_api_key_here
UK_CONTRACTS_CLIENT_ID=your_uk_contracts_client_id
UK_CONTRACTS_CLIENT_SECRET=your_uk_contracts_client_secret

# Storage Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=bidfetch-documents
S3_REGION=us-east-1

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Rate Limiting
SAM_GOV_RATE_LIMIT=1500
SAM_GOV_RATE_WINDOW=3600000
GRANTS_GOV_RATE_LIMIT=100
GRANTS_GOV_RATE_WINDOW=3600000

# Scheduler Configuration
ENABLE_SCHEDULER=true
SAM_GOV_POLL_INTERVAL=900000
GRANTS_GOV_POLL_INTERVAL=86400000
FPDS_POLL_INTERVAL=3600000

# Worker Configuration
WORKER_CONCURRENCY=5
JOB_TIMEOUT=300000

# ML Configuration
ML_MODEL_PATH=./models
ENABLE_ML_PREDICTIONS=true